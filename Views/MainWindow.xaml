<Window x:Class="GraDeMarCoWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:GraDeMarCoWPF"
        xmlns:v="clr-namespace:GraDeMarCoWPF.Views"
        xmlns:vm="clr-namespace:GraDeMarCoWPF.ViewModels"
        mc:Ignorable="d"
        Title="GraDeMarCo" Width="370" Height="550"
        d:DataContext="{d:DesignInstance vm:MainViewModel}">
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl"/>
        <KeyBinding Key="O" Modifiers="Ctrl"/>
        <KeyBinding Key="S" Modifiers="Ctrl"/>
        <KeyBinding Key="S" Modifiers="Ctrl+Shift"/>
    </Window.InputBindings>
    <StackPanel>
        <Menu>
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="新規(_N)"/>
                <MenuItem Header="開く(_O)" Command="{Binding OpenWorkspaceCommand}"/>
                <MenuItem Header="上書き保存(_S)"/>
                <MenuItem Header="名前を付けて保存(_A)" Command="{Binding SaveWorkspace}"/>
                <Separator/>
                <MenuItem Header="終了(_X)"/>
            </MenuItem>
            <MenuItem Header="画像(_I)">
                <MenuItem Header="画像を開く(_O)" Command="{Binding OpenImage}"/>
                <MenuItem Header="画像を保存する(_S)"/>
            </MenuItem>
            <MenuItem Header="表示(_V)">
                <MenuItem Header="拡大(_I)" Command="{Binding ZoomInCommand}"/>
                <MenuItem Header="縮小(_O)" Command="{Binding ZoomOutCommand}"/>
            </MenuItem>
        </Menu>
        <TabControl Height="425">
            <TabItem Header="画像範囲･円選択">
                <StackPanel Orientation="Vertical">
                    <v:ImageAreaSelectingPanel/>
                    <v:PlanimetricCircleDrawingPanel/>
                </StackPanel>
            </TabItem>
            <TabItem Header="粒検出" HorizontalAlignment="Right" Width="48" Height="20" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <v:ImageFilteringPanel/>
                    <v:ImageBinarizingPanel/>
                    <v:GrainDetectingPanel/>
                </StackPanel>
            </TabItem>
            <TabItem Header="点打ち">
                <StackPanel Orientation="Vertical">
                    <v:DotDrawingPanel/>
                </StackPanel>
            </TabItem>
            <TabItem Header="点カウント" Height="20" VerticalAlignment="Top">
                <v:DotCountingPanel/>
            </TabItem>
        </TabControl>
        <Label Content="表示" Style="{DynamicResource HeadlineLabel}"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <ToggleButton Grid.Row="0" Grid.Column="0" Content="画像範囲" Style="{DynamicResource NormalToggleButton}"/>
            <ToggleButton Grid.Row="0" Grid.Column="1" Content="円" Style="{DynamicResource NormalToggleButton}"/>
            <ToggleButton Grid.Row="0" Grid.Column="2" Content="画像処理" Style="{DynamicResource NormalToggleButton}"/>
            <ToggleButton Grid.Row="0" Grid.Column="3" Content="点打ち" Style="{DynamicResource NormalToggleButton}"/>
        </Grid>
    </StackPanel>
</Window>
