<UserControl x:Class="GraDeMarCoWPF.Views.MyPictureBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraDeMarCoWPF.Views"
             xmlns:vm="clr-namespace:GraDeMarCoWPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:ImageViewModel}">
    <Grid>
        <Image x:Name="image" Source="{Binding Source, RelativeSource={RelativeSource AncestorType=local:MyPictureBox}}"
               HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="None">
            <Image.LayoutTransform>
                <ScaleTransform
                            ScaleX="{Binding ZoomScale, RelativeSource={RelativeSource AncestorType=local:MyPictureBox}}"
                            ScaleY="{Binding ZoomScale, RelativeSource={RelativeSource AncestorType=local:MyPictureBox}}"/>
            </Image.LayoutTransform>
        </Image>
    </Grid>
</UserControl>
