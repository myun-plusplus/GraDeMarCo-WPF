<UserControl x:Class="GraDeMarCoWPF.Views.MyRenderBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraDeMarCoWPF.Views"
             xmlns:vm="clr-namespace:GraDeMarCoWPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:ImageViewModel}">
    <Grid>
        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="None">
            <Image.LayoutTransform>
                <ScaleTransform
                            ScaleX="{Binding RenderZoomScale, RelativeSource={RelativeSource AncestorType=local:MyRenderBox}}"
                            ScaleY="{Binding RenderZoomScale, RelativeSource={RelativeSource AncestorType=local:MyRenderBox}}"/>
            </Image.LayoutTransform>
        </Image>
    </Grid>
</UserControl>
